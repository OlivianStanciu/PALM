@{
    ViewBag.Title = "PHOTOBOOK Calculator";
}


<style>
    .login-dark {
        max-width: 320px;
        width: 90%;
        background-color: #1e2833;
        padding: 40px;
        border-radius: 4px;
        transform: translate(-50%, -50%);
        position: absolute;
        top: 50%;
        left: 50%;
        color: #fff;
        box-shadow: 3px 3px 4px rgba(0,0,0,0.2);
    }
        .login-dark select, .login-dark input {
            background-color: rgba(0,0,0,0);
            color: white;
        }
</style>

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap2-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap2-toggle.min.js"></script>


<header class="default_header"></header>
<div class="container">





    <div class="login-dark">
        <form>
            <div class="form-group">
                <label for="sel1"><b>Album (cm)</b></label>
                <select class="form-control" id="sel1">
                    <option>20x15</option>
                    <option>20x20</option>
                    <option>25x20</option>
                    <option>25x25</option>
                    <option>30x20</option>
                    <option>30x30</option>
                </select>
            </div>

           @* <div class="form-group">
                <label for="sel1"><b>Tip Falce-Off</b></label>
                <select class="form-control" id="sel1">
                    <option>Carton embonsat</option>
                    <option>Catifea</option>
                    <option>Topografie</option>
                    <option>Sidef</option>
                </select>
            </div>*@

            <div class="form-group">
                <label for="sel1"><b>Nr. Layout-uri</b></label>
                <input class="form-control" type="number" min="1" placeholder="Nr. layouturi">
            </div>

            <div class="form-group custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="switch_Cover">
                <label class="custom-control-label" for="switch_Cover"><b>Copertă Personalizată</b></label>
            </div>

            <div class="form-group custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="switch_Graphics">
                <label class="custom-control-label" for="switch_Graphics"><b>Grafică</b></label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-info my-1 btn-lg rounded-lg">Află preț</button>
            </div>
            
        </form>
    </div>

</div>

@model IEnumerable<CanvasPicture>

@{
    ViewData["Title"] = "Tablouri Canvas";

}

<style>
    #photos .img-wrap {
        background-color: transparent;
        margin-bottom: 10px;
        position: relative;
    }

        #photos .img-wrap .fa-plus {
            position: absolute;
            color: transparent;
            display: flex;
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
        }

        #photos .img-wrap:hover {
            background-color: #24add6;
        }

            #photos .img-wrap:hover > .fa-plus {
                color: white;
            }

    #photos img:hover {
        opacity: 0.2;
    }

    /*Canvas Flip Cards*/

    .flip-card {
        background-color: transparent;
        width: 300px;
        height: 300px;
        perspective: 1000px;
        margin: auto;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
    }

    .flip-card-front {
        background-color: #bbb;
        color: black;
    }

    .flip-card-back {
        background: -webkit-linear-gradient(-45deg, #333333 60%, #1fe6fe);
        color: white;
        transform: rotateY(180deg);
    }

    .text-block {
        position: absolute;
        bottom: 20px;
        right: 20px;
        background-color: rgba(0,0,0,0.3);
        color: white;
        padding: 10px;
    }
</style>

<header class="default_header"></header>




<section class="page-section">
    <div class="container-xl">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Tablouri  Canvas</h2>
            <h3 class="section-subheading text-muted">
                "Print pe pânză montat pe șasiuri din lemn."
            </h3>

            <div class="row text-center rounded">
                <div class="col-md-6" style="margin-bottom:30px">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="~/img/content/canvas/Pricing/canvastablou.jpg" alt="Avatar" style="width:300px;height:300px;">
                                <div class="text-block rounded">
                                    <i class="fas fa-sync-alt" style="font-size:2em; color:#24add6"></i>
                                </div>

                            </div>
                            <div class="flip-card-back container">
                                <br />
                                <h3>Tablou simplu</h3>
                                <br /><br />
                                <h5 style="margin-bottom:15px">25x25 cm - 30 RON</h5>
                                <h5 style="margin-bottom:15px">25x35 cm - 40 RON</h5>
                                <h5>35x53 cm - 95 RON</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 rounded" style="margin-bottom:30px">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="~/img/content/canvas/Pricing/multicanvas.gif" alt="Avatar" style="width:300px;height:300px;">
                                <div class="text-block rounded">
                                    <i class="fas fa-sync-alt" style="font-size:2em; color:#24add6"></i>
                                </div>

                            </div>
                            <div class="flip-card-back container">
                                <br />
                                <h3>Multi-Canvas</h3>
                                <br /><br />
                                <h5>125x100 cm - 350 RON</h5>
                                <p>(2 buc 25x40 cm, 2 buc 25x70 cm,</br> 1 buc 25x100 cm)</p>
                                <h5>75x70 cm - 180 RON</h5>
                                <p>(2 buc 25x40 cm, 1 buc, 25x70 cm)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="container-xl" style="padding-top:6rem">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Galerie</h2>
            <h3 class="section-subheading text-muted">
                "Momentele unice care îți aduc zâmbetul pe buze merită să fie păstrate pentru totdeauna, nu doar în suflet, ci și într-un tablou special."
            </h3>
        </div>
    </div>

    @{
        int sliderContent = 0;
    }

    <div class="container-fluid">
        <div id="photos">
            @foreach (var item in Model)
            {
                <a data-toggle="modal" href="#modal_main">
                    <div class="img-wrap rounded">
                        <i class="fas fa-plus fa-3x"></i>
                        <img class=" img-thumbnail shadow-sm p-2 bg-white rounded" src="@item.CoverPath" data-aos="zoom-in-up" data-aos-duration="1000" onclick="setCarouselActiveItemTo('@sliderContent')">
                    </div>
                </a>
                sliderContent++;
            }
        </div>
    </div>
</section>

@{
    sliderContent = 0;
}
<!-- Photobook Modals-->
<div class="portfolio-modal modal fade" id="modal_main" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                @*<img src="~/assets/img/close-icon.svg" alt="Close modal" />*@
                <i class="fas fa-times" alt="Close modal" style="font-size:3em"></i>
            </div>
            <div class="container">
                <!-- Project Details Go Here-->
                <h2 class="text-uppercase">Canvas</h2>

                <div style="margin-bottom:20px">

                    <!-- Carousel-->
                    <div id="carousel_main" class="carousel slide" data-ride="carousel">

                        <!-- Content -->
                        <div class="carousel-inner">
                            @foreach (var canvasItem in Model)
                            {
                                if (sliderContent == 0)
                                {
                                    <div class="carousel-item active" id="@String.Concat("carousel_item", @sliderContent)">
                                        <img class="d-block w-100" src="@canvasItem.PhotoPath" style="margin-bottom:0px;">
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item" id="@String.Concat("carousel_item", @sliderContent)">
                                        <img class="d-block w-100" src="@canvasItem.PhotoPath" style=" margin-bottom: 0px;">
                                    </div>
                                }
                                sliderContent++;
                            }
                        </div>
                        <!-- End Content -->
                        <!-- Controls-->
                        <a class="carousel-control-prev" href="#carousel_main" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>

                        <a class="carousel-control-next" href="#carousel_main" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <!-- End Controls -->
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            @{sliderContent = 0;}
                            @foreach (var canvasItem in Model)
                            {
                                if (!canvasItem.Path.Contains("_cover"))
                                {
                                    if (sliderContent == 0)
                                    {
                                        <li data-target="#main_carousel" data-slide-to="@sliderContent" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#main_carousel" data-slide-to="@sliderContent"></li>
                                    }
                                    sliderContent++;
                                }
                            }
                        </ol>
                        <!-- End Indicators -->
                    </div>
                    <!-- End Carousel -->
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function setCarouselActiveItemTo(carouselItemId) {
        //carousel content
        $('#carousel_main .carousel-item.active').removeClass('active');
        //$('#carousel_main .carousel-item')[carouselItemId].setAttribute('class', 'carousel-item active');
        //id="@String.Concat("carousel_img", @sliderContent)"
        $('#carousel_item' + carouselItemId).addClass('active');
    }
</script>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--UIKit -->
<link href="~/lib/uiKit/css/uikit.min.css" rel="stylesheet" />
<script src="~/lib/uiKit/js/uikit.min.js"></script>
<script src="~/lib/uiKit/js/uikit-icons.min.js"></script>
<!--UIKit -->

<div class="default_header"></div>

<button class="uk-button uk-button-default uk-margin-small-right" type="button" uk-toggle="target: #offcanvas-slide">
    <i class="fas fa-bars"></i>
</button>

<div id="offcanvas-slide" uk-offcanvas="overlay: true" style="margin-top:9em">
    <div class="uk-offcanvas-bar text-center">
        <button class="uk-offcanvas-close" type="button" uk-close></button>
        <h4><a asp-controller="Photobooks" asp-action="Index">Photobooks Editor</a></h4>
        <hr />
        <h4><a asp-controller="CanvasPictures" asp-action="Index">Canvas Pictures Editor</a></h4>
        <hr />

        <form asp-controller="Account" asp-action="Logout">
            <input type="submit" value="Logout" class="btn btn-outline-danger" />
        </form>
    </div>
</div>

@RenderBody()